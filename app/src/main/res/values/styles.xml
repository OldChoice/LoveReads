<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 横向割线 -->
    <style name="divide_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dividing_line_height</item>
        <item name="android:background">@color/divide_grey</item>
    </style>
    <!-- 竖向割线 -->
    <style name="divide_vertical">
        <item name="android:layout_width">@dimen/dividing_line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide_grey</item>
    </style>




</resources>
